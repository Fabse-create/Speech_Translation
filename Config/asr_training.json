{
  "model_name": "openai/whisper-large-v2",
  "language": "en",
  "task": "transcribe",
  "data_config_path": "Config/dataloader_config.json",
  "data_mode": "default",
  "data_config_override": {
    "dataset_root": "Data/extracted_data",
    "split": "Train",
    "percent": 100,
    "sampling": "random",
    "seed": 42,
    "max_samples": null,
    "modes": {}
  },
  "num_experts": 4,
  "top_k_experts": 2,
  "batch_size": 4,
  "epochs": 5,
  "learning_rate": 0.0001,
  "weight_decay": 0.0,
  "seed": 42,
  "num_workers": 4,
  "val_split": 0.1,
  "load_balance_coef": 0.2,
  "gating_model_config": "Config/gating_model_config.json",
  "gating_checkpoint": "checkpoints/gating_model/best.pt",
  "use_lora": true,
  "lora": {
    "r": 16,
    "alpha": 32,
    "dropout": 0.05,
    "target_modules": ["q_proj", "v_proj"]
  },
  "experts_dir": "checkpoints/experts",
  "output_dir": "checkpoints/asr",
  "fp16": true,
  "metrics_dir": "Evaluation/asr_training_results",
  "gradient_accumulation_steps": 4,
  "eval_every_n_epochs": 1,
  "save_every_n_epochs": 1,
  "pin_memory": true,
  "soft_routing_epochs": 3,
  "topk_routing_epochs": 6,
  "routing_temperature_start": 2.0,
  "routing_temperature_end": 1.0,
  "min_expert_usage_fraction": 0.05,
  "routing_temperature_min": 1.0,
  "router_noise_std": 0.1,
  "routing_alignment_coef": 0.1,
  "routing_alignment_temperature": 1.0,
  "routing_entropy_coef": 0.01,
  "save_every_epoch": true,
  "rebase_output_dir": true
}
